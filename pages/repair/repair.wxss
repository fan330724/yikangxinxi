/* pages/repair/repair.wxss */
page{
  background-color: #F2F2F2;
  padding-bottom: 30rpx;
}
.logo{
  width: 236rpx;
  height:236rpx;
}
.logo image{
  width: 100%;
  height: 100%;
}
.title{
  padding-left: 30rpx;
}
.title view{
  font-size: 36rpx;
  color: #01A1FF;
  font-weight: bold;
}
.title text{
  font-size: 28rpx;
  color: #8C9198;
  margin-top: 12rpx;
}
.login .mail,.mail view{
  font-size: 28rpx;
  color: #5B5E63;
}
.login .mail{
  background-color: white;
  margin-top: 40rpx;
  padding: 20rpx 40rpx;
}
.login .mail view:nth-of-type(1){
  color: #5B5E63;
  font-weight: bold;
}
.login input{
  width: 100%;
  font-size: 24rpx;
  color: #8C9198;
  text-align: left;
  padding: 20rpx 0 0;
}
.login .mail .location,.login .mail .date{
  display: flex;
}
.login .mail .location image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 12rpx;
}
.login .mail .date{
  justify-content: space-between;
  align-items: center;
}
.login .mail .date image{
  width: 40rpx;
  height: 40rpx;
}
.mail .detailed{
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #01A1FF;
}
.mail textarea{
  margin-top: 40rpx;
  background-color: #F3F3F3;
  padding: 30rpx;
  color: #8C9198;
  font-size: 24rpx;
}
.uploader{
  display: flex;
  margin-top: 20rpx;
  /* margin: 50rpx 0; */
}
.uploader-list{
  width: 110rpx;
  height: 110rpx;
  position: relative;
  margin-top: 20rpx;
  margin-right: 40rpx;
}
.uploader-list image{
  width: 100%;
  height: 100%;
}
.uploader-list .delete{
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
}
.uploader-list .delete image{
  width: 100%;
  height: 100%;
}
.mail .upload{
  width: 110rpx;
  height: 110rpx;
  margin-top: 20rpx;
}

.sub{
  margin-top: 50rpx;
  width: 590rpx !important;
  height: 88rpx;
  color: white;
  border-radius: 60rpx;
  background-color: #01A1FF;
}